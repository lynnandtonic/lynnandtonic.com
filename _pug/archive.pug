extends _layout

block vars
  - var pageTitle = 'Site Archive'
  - var pageDescription = 'Previous and archived versions of lynnandtonic.com, one per year since 2007.'
  - var pagePath = 'archive'
  - var bodyClass = 'archive'

block header

  include includes/page-arc.pug
  include includes/page-ccc.pug
  include includes/page-chive.pug
  include includes/desc-awebs.pug
  include includes/desc-sss.pug
  include includes/desc-sitethatchangese.pug
  include includes/desc-eee.pug
  include includes/desc-everyyear.pug

  h1#content
    span.visually-hidden Archive, a website that changes every year
    .page
      .page-piece
        +svg-page-arc(height='100%', width='auto')
      .page-piece.stretch
        +svg-page-ccc(height='100%', width='100%', preserveAspectRatio='none')
      .page-piece
        +svg-page-chive(height='100%', width='auto')
    .desc
      .desc-piece
        +svg-desc-awebs(height='100%', width='auto')
      .desc-piece.stretch
        +svg-desc-sss(height='100%', width='100%', preserveAspectRatio='none')
      .desc-piece
        +svg-desc-sitethatchangese(height='100%', width='auto')
      .desc-piece.stretch
        +svg-desc-eee(height='100%', width='100%', preserveAspectRatio='none')
      .desc-piece
        +svg-desc-everyyear(height='100%', width='auto')

