extends _layout

block vars
  - var pageTitle = 'Thoughts'
  - var pageDescription = 'Writing by Lynn Fisher about design, development, the web industry, and more.'
  - var pagePath = 'thoughts'
  - var bodyClass = 'thoughts'

mixin thought(date,title,href,source)
  .thought
    a.thought-title(href=href)
      span= title
    if source
      small.external= source
    //- small.date= date

block header

  include includes/page-tho.pug
  include includes/page-ooo.pug
  include includes/page-oughts.pug
  include includes/desc-aboutdes.pug
  include includes/desc-sss.pug
  include includes/desc-signwebdevelopme.pug
  include includes/desc-eee.pug
  include includes/desc-entetcetera.pug

  h1#content
    span.visually-hidden Thoughts about design, web development, etcetera
    .page
      .page-piece
        +svg-page-tho(height='100%', width='auto')
      .page-piece.stretch
        +svg-page-ooo(height='100%', width='100%', preserveAspectRatio='none')
      .page-piece
        +svg-page-oughts(height='100%', width='auto')
    .desc
      .desc-piece
        +svg-desc-aboutdes(height='100%', width='auto')
      .desc-piece.stretch
        +svg-desc-sss(height='100%', width='100%', preserveAspectRatio='none')
      .desc-piece
        +svg-desc-signwebdevelopme(height='100%', width='auto')
      .desc-piece.stretch
        +svg-desc-eee(height='100%', width='100%', preserveAspectRatio='none')
      .desc-piece
        +svg-desc-entetcetera(height='100%', width='auto')

  //- .callout
