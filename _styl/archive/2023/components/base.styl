/*--------------------------------------------------------------------
* $BASE
--------------------------------------------------------------------*/

*, *::before, *::after
  box-sizing: border-box

::selection
  background-color: var(--text-color)
  color: var(--bg-color)
  fill: var(--bg-color)

html
  height: 100%

  &:has(body.thought-detail)
    scroll-padding-top: calc(var(--nav-height) + 10px);

body
  width: 100%
  height: 100%
  padding-top: var(--nav-height)
  font-family: $font-base
  font-size: var(--font-base)
  font-weight: 300
  line-height: 1.5
  color: var(--text-color)
  background-color: var(--bg-color)

  &:not(.home)
    min-height: 100%
    display: grid
    align-items: start

.visually-hidden,
.screenreader
  visually-hidden()

img
  width: 100%
  max-width: 100%
  height: auto
  display: block

//-----------------------------
// helpers

.center
  text-align: center

.hidden
  display: none

.mb0
  margin-bottom: 0 !important
