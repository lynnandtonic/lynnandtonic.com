/*--------------------------------------------------------------------
* $VARIABLES
--------------------------------------------------------------------*/

// Font Families
$font-base = system-ui, 'Segoe UI', Roboto, sans-serif
$font-squada = 'SquadaOne-Regular', Avenir Next Condensed, Arial Narrow, Impact, sans-serif

// Mixins

b(val) //b for bracket
  unquote("[") + val + unquote("]")

white(alpha)
  rgba(255,255,255,alpha)

black(alpha)
  rgba(0,0,0,alpha)

linked-img()
  display: block
  box-shadow: 0 0 0 transparent
  transition: box-shadow 100ms ease-in-out

  &:focus:focus-visible
    box-shadow: 0 0 0 5px var(--bg-color), 0 0 0 6px var(--focus-outline)
    outline: none
  &:hover
    box-shadow: 0 0 0 5px var(--bg-color), 0 0 0 6px var(--border-color)

visually-hidden()
  height: 1px
  width: 1px
  position: absolute
  display: block
  overflow: hidden
  clip: rect(1px 1px 1px 1px)
  clip: rect(1px, 1px, 1px, 1px)
  clip-path: inset(1px)
  white-space: nowrap

// Breakpoints

$bp-xxs = 360px
$bp-xs  = 500px
$bp-sm  = 750px
$bp-md  = 950px
$bp-lg  = 1500px

// UI elements

$link-padding = .2em
$ui-border = var(--border-width) solid var(--border-color)
$ui-radius = .8rem

// Colors

:root
  --lime: #cef565
  --blue: #4000f5
  --bg-color: var(--lime)
  --text-color: var(--blue)
  --border-width: 2px
  --border-color: var(--text-color)
  
