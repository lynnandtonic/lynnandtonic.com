.gifs

  .gif-preview
    display: block
    
    &:focus:focus-visible
      focus-img()

    & + small
      display: block
      margin-top: .5em

  pre
    margin: 1rem 0 3rem
    display: grid
    grid-template-columns: 1fr auto
    gap: 1rem
    white-space: pre
    border: none
    border-radius: 0
    overflow: visible

  code
    padding: .5em 1em .4em .6em
    display: block
    overflow: auto
    background-color: var(--pre-bg)
    color: var(--text-color)
    border: $ui-border-thin
    border-radius: 0

    &:focus-visible
      focus-btn()

  pre button
    margin: 0

  img
    display: block

  &.no-js

    .gif-preview
      cursor: default
      
      & + small
        display: none

    pre
      display: block
      padding: 0

      &::before
        content: 'Markdown:'
        font-family: $font-base
        font-size: var(--font-sm)

    noscript p
      margin-top: 1lh
