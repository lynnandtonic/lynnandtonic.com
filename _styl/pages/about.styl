/*--------------------------------------------------------------------
* $ABOUT
--------------------------------------------------------------------*/

.about

  .avatar
    width: 30%
    margin: 0 1em 0 0
    float: left
    display: block
    position: relative
    overflow: hidden
    border: $ui-border-thin
    
    img
      filter: grayscale(100%)
      border: none

    & + *
      margin-top: 0

  .links
    width: 100%

    li
      margin: 0
      padding: .5em 0 .3em
      display: flex
      gap: 3em
      align-items: center
      justify-content: space-between
      font-size: var(--font-sm)
      font-weight: 400
      line-height: 1.3

      &:not(:last-child)
        border-bottom: $ui-border-dotted
        border-color: var(--light-color)

      * + *
        margin: 0

      span:first-child
        font-weight: 500

      .date
        grid-column: 2
        grid-row: 1 / 3
        text-align: right
        font-weight: 300

    a
      link-alt()

    small
      margin-top: 0

  .coffee
    margin-left: 2px
    padding: 6px 0 6px 26px
    background-repeat: no-repeat
    background-position: left center
    background-image: url('/assets/images/coffee.svg')
    background-size: 20px 30px
