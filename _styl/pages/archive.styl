/*--------------------------------------------------------------------
* $ARCHIVE
--------------------------------------------------------------------*/

.archive-list
  padding-top: var(--border-width)
  display: grid
  gap: var(--border-width)
  background-color: var(--border-color)

  li
    background-color: var(--bg-color)

  .blank-space
    display: none
    place-content: center

  @media screen and (min-width: 451px) and (max-width: $bp-sm)
    grid-template-columns: repeat(2, 1fr)

    .blank-space
      display: grid

  @media screen and (min-width: $bp-sm + 1) and (max-width: $bp-lg)
    grid-template-columns: repeat(3, 1fr)

    .blank-space
      display: grid

  @media screen and (min-width: $bp-lg + 1)
    grid-template-columns: repeat(4, 1fr)

    .blank-space
      display: grid
      grid-column: span 3

  .archive-image
    display: block
    position: relative

    img
      filter: grayscale(1)

    &:after
      content: ''
      width: 100%
      height: 100%
      position: absolute
      top: 0
      left: 0
      background-color: var(--text-color)
      mix-blend-mode: color

    // &:focus:focus-visible
    //   outline: none
    // &:hover

  a
    link-alt()

  .links
    padding: 1rem
    display: flex
    justify-content: space-between
    align-items: center

  .study a
    font-weight: 350

  img,
  small
    display: block
