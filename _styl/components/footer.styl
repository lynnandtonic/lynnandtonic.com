/*--------------------------------------------------------------------
* $FOOTER
--------------------------------------------------------------------*/

.main-footer
  align-self: end
  padding: clamp(1rem, 3vw, 2rem)
  display: flex
  flex-wrap: wrap
  border: $ui-border
  border-bottom-left-radius: $ui-radius
  border-bottom-right-radius: $ui-radius
  font-size: var(--font-xs)

  @media screen and (max-width: $bp-sm)
    flex-direction: column
    align-items: center
    gap: 1em
  @media screen and (min-width: $bp-sm + 1)
    justify-content: space-between
    gap: 0 1em

  nav
    display: flex
    flex-wrap: wrap
    justify-content: center
    align-items: center
    gap: .3em 1em
    text-transform: uppercase

    a:not(.social)
      link-alt()

  .archives
    flex-basis: 100%
    display: flex
    justify-content: flex-start
    gap: .3em .5em

    a:not(.social)
      link-alt()
