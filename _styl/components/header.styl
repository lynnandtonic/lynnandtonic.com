/*--------------------------------------------------------------------
* $HEADER
--------------------------------------------------------------------*/

.header-main
  border: $ui-border
  border-top-left-radius: $ui-radius
  border-top-right-radius: $ui-radius

  &:not(.home)
    h1
      max-width: 100%
      padding: clamp(3rem, 10vw, 6rem) 20vw
      container: page / inline-size
      display: grid
      gap: clamp(.5rem, 1.5vw, 1rem)

    .page,
    .desc
      display: flex

    .page-piece
      max-height: 140px

    .desc-piece
      max-height: 40px

    .stretch
      margin-inline: -.05rem
      flex: 1

  &.about
    h1
      padding-inline: 22vw
    .page-piece
      height: 15.8vw
    .desc-piece
      height: 3.75vw

  &.work
    h1
      padding-inline: 25vw
    .page-piece
      height: 14.6vw
    .desc-piece
      height: 3.45vw

  &.thoughts
    h1
      padding-inline: 15vw
    .page-piece
      height: 12.7vw
    .desc-piece
      height: 3.02vw

  &.archive
    h1
      padding-inline: 20vw
    .page-piece
      height: 13.1vw
    .desc-piece
      height: 3.1vw

  @container page (min-width: 500px)
    &:not(.thoughts)
      .page
        .stretch
          margin-inline: -2px

  @container page (min-width: 690px)
    &.thoughts
      .page
        .stretch
            margin-inline: -2px

  @container page (min-width: 2000px)
    .page
      .stretch
        margin-inline: -4px

  @container page (min-width: 500px)
    &.work
      .desc
        .stretch
          margin-inline: -2px

  @container page (min-width: 530px)
    &.about
      .desc
        .stretch
          margin-inline: -2px

  @container page (min-width: 685px)
    &.archive
      .desc
        .stretch
          margin-inline: -2px

  @container page (min-width: 850px)
    &.thoughts
      .desc
        .stretch
          margin-inline: -2px

