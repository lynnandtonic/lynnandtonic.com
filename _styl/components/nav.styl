/*--------------------------------------------------------------------
* $NAV
--------------------------------------------------------------------*/

.main-nav,
.home-contact

  a
    display: inline-grid
    font-weight: 400
    text-decoration: none

    figure
      transform: scale(1) rotate(0deg)
      transition: transform 150ms ease-in-out
    span
      transform: translate(0,0) rotate(0deg)
      transition: transform 200ms ease-in-out

    &:hover
      background-color: transparent
      color: inherit

.main-nav:not(.home)
  min-height: 60px
  padding: 0 clamp(1rem, 3vw, 2rem)
  display: flex
  flex-wrap: wrap
  gap: 0 clamp(.5rem, 2vw, 1rem)
  justify-content: flex-end
  align-items: flex-end
  border-bottom: $ui-border

  @media screen and (max-width: $bp-xs)
    justify-content: center

  & > div:first-of-type
    margin-inline-end: auto
    align-self: center

    @media screen and (max-width: $bp-xs)
      width: 100%
      text-align: center

    a:hover
      figure
        transform: scale(1.1) rotate(-4deg)

  a
    font-size: clamp(.8rem, 2vw, 1.1rem)
    grid-template-rows: auto auto

    span
      justify-self: end
      grid-row: 2

    &:not(.logo)
      margin-block-start: -1.5rem
      
    &.logo
      margin-block-start: .5rem
      width: 22vw
      max-width: 200px

    &.about
      translate: 0 35%
      span
        rotate: -2deg
      figure
        height: clamp(50px, 10vw, 80px)
        rotate: -8deg
      &:hover
        span
          transform: translate(-30%,30%) rotate(-4deg)
        figure
          transform: scale(1.1) rotate(12deg)
    
    &.work
      translate: 0 34%
      span
        justify-self: center
        rotate: 10deg
      figure
        height: clamp(55px, 11vw, 100px)
        rotate: 5deg
      &:hover
        span
          transform: translate(40%,5%) rotate(0deg)
        figure
          transform: scale(1.1) rotate(-14deg)
    
    &.archive
      translate: 0 32%
      span
        rotate: -4deg
      figure
        height: clamp(60px, 11vw, 100px)
        rotate: -6deg
      &:hover
        span
          transform: translate(-20%,30%) rotate(-3deg)
        figure
          transform: scale(1.1) rotate(10deg)
    
    &.thoughts
      translate: 0 37%
      gap: .2em
      span
        rotate: 2deg
      figure
        height: clamp(48px, 10vw, 80px)
        rotate: 3deg
      &:hover
        span
          transform: translate(20%,20%) rotate(3deg)
        figure
          transform: scale(1.1) rotate(-13deg)

