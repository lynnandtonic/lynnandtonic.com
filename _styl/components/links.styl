/*--------------------------------------------------------------------
* $LINKS
--------------------------------------------------------------------*/

link-default()
  text-decoration: underline
  text-decoration-thickness: 1px
  text-underline-offset: 2px

link-alt()
  text-decoration: none
  &:hover
    link-default()
    background-color: transparent
    color: var(--text-color)

a
  color: var(--text-color)
  font-weight: 550
  link-default()
  color: var(--text-color)

  &:hover
    background-color: var(--text-color)
    color: var(--bg-color)
    text-decoration: none

  &:focus:focus-visible
    outline: $focus-border
    text-decoration: none
    transition: none

  &:focus:not(:focus-visible)
    outline: none

  &:active
    transform: translateY(1px)

  &.skip-link
    padding: .4em 1em
    position: fixed
    left: 1em
    top: 1em
    background-color: var(--bg-color)
    // box-shadow: 5px 5px 0 var(--border-color)
    border: $ui-border
    clip: rect(0 0 0 0)
    z-index: 200

    &:hover
      color: inherit

    &:focus
      clip: unset
      outline: $focus-border

a.button,
button
  padding: .5em 1em
  background-color: var(--text-color)
  border: none
  border-radius: 4px
  font-weight: 600
  color: var(--bg-color)
  cursor: pointer

a.button,
button
  &:active
    transform: translateY(1px)
  &:focus:focus-visible
    outline: $focus-border

button
  font-family: $font-base
