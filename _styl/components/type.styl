/*--------------------------------------------------------------------
* $TYPE
--------------------------------------------------------------------*/

h1, h2, h3
  font-family: $font-squada
  line-height: 1.1
  font-weight: 400
  text-transform: uppercase

h2
  font-size: var(--font-xl)

h3
  font-size: var(--font-lg)

p, li {
  text-wrap: pretty
}

em
  font-weight: inherit
  font-style: italic

strong
  font-weight: 600

small,
.small
  font-size: var(--font-sm)
  font-weight: 400

ul.bullets
  list-style-type: disc
  padding-left: 1rem

figcaption
  font-size: var(--font-xs)
  font-weight: 400

