/*--------------------------------------------------------------------
* $BASE
--------------------------------------------------------------------*/

*, *::before, *::after
  box-sizing: border-box

::selection
  background-color: var(--text-color)
  color: var(--bg-color)
  fill: var(--bg-color)

html
  height: 100%
  color-scheme: light dark

  &[data-user-color-scheme="light"]
    color-scheme: light

  &[data-user-color-scheme="dark"]
    color-scheme: dark

body
  width: 100%
  min-height: 100%
  display: grid
  background-color: var(--bg-color)
  background-image: url(/assets/images/bg-pattern.jpg)
  background-repeat: repeat
  background-position: fixed
  background-size: 1400px auto
  font-family: $font-base
  font-size: var(--font-base)
  font-weight: 300
  line-height: 1.6
  color: var(--text-color)
  
  @media screen and (min-width: $bp-sm)
    justify-content: center

@media (prefers-color-scheme: dark)
  body
    background-image: url(/assets/images/bg-pattern-dark.jpg)

[data-user-color-scheme='dark']
  body
    background-image: url(/assets/images/bg-pattern-dark.jpg)

.app
  width: calc(100% - var(--content-padding) * 2)
  margin: var(--content-padding)
  transition: transform 100ms cubic-bezier(0.175, 0.885, 0.12, 1.775)
  transform: scale(1,1)
  
  @media screen and (min-width: $bp-sm)
    width: calc(500px - var(--content-padding) * 2)

.visually-hidden,
.screenreader
  visually-hidden()

img
  width: 100%
  max-width: 100%
  height: auto
  display: block

// -----------------------------
// helpers

.center
  text-align: center

.hidden
  display: none

.mb0
  margin-bottom: 0
